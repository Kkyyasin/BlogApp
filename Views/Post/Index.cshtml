@model List<Post>


    <div class="row mb-4">

        <div class="col-lg-8">
            <div class="bg-white p-3">
                <h4 class="mb-4">Popüler Postlar</h4>
                @foreach(var post in Model){
                @if(post.IsActive==true){
                <div class="card bg-transparent border-0 mb-3">
                    <div class="row">
                        <div class="col-4">
                            <img src="data:image/png;base64,@Convert.ToBase64String(@post.Image)"
                                class="img-fluid rounded">
                        </div>
                        <div class="col-8">
                            <h5><a href="/posts/detail/@post.Url" class="btn-link fw-bold">@post.Title</a></h5>
                            <p>@post.Content
                            </p>
                            <div class="tags">
                                @foreach (var tag in post.Tags){
                                <a href="/posts/tag/@tag.Url"
                                    class="badge bg-@tag.Color bg-opacity-10 text-@tag.Color mb-2 fw-bold">@tag.Text</a>
                                }
                            </div>

                        </div>

                    </div>
                </div>
                <hr class="my-3">}
                }
                <nav>
                    <ul class="pagination">
                        <li class="page-item">
                            <a href="" class="page-link">1</a>
                        </li>
                        <li class="page-item">
                            <a href="" class="page-link">2</a>
                        </li>
                        <li class="page-item">
                            <a href="" class="page-link">3</a>
                        </li>
                    </ul>
                </nav>
            </div>

        </div>
        <div class="col-lg-4">
            <vc:tags-menu></vc:tags-menu>
            <vc:new-posts></vc:new-posts>
        </div>
    </div>
    <link rel="stylesheet" href="~/css/posts.css">
    <style>
        /* Genel arka plan ve padding */
        .bg-white {
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        /* Başlık stili */
        h4 {
            color: #333;
            margin-bottom: 2rem;
        }

        /* Post kart stili */
        .card {
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.2);
        }

        /* Resim köşelerini yuvarlak yap */
        .img-fluid {
            border-radius: 0.25rem;
            margin-bottom: 1rem;
        }

        /* Post başlığı stili */
        .card .btn-link {
            color: #0056b3;
            text-decoration: none;
            /* Alt çizgileri kaldır */
            transition: color 0.3s;
            /* Renk değişim animasyonu */
        }

        .card .btn-link:hover {
            color: #00376b;
            text-decoration: underline;
            /* Hover'da altını çiz */
        }

        /* İçerik stili */
        .card p {
            color: #666;
            font-size: 0.9rem;
        }

        /* Kategori etiketi stili */
        .badge {
            font-size: 0.75rem;
            padding: 0.5em 0.75em;
            font-weight: bold;
            border-radius: 0.2rem;
            transition: background-color 0.3s, color 0.3s;
            /* Arka plan ve yazı rengi değişim animasyonu */
        }

        .badge:hover {
            background-color: #dc3545;
            color: #ffffff;
        }

        /* Sayfalama stili */
        .pagination .page-link {
            color: #0056b3;
            transition: background-color 0.3s, color 0.3s;
            /* Arka plan ve yazı rengi değişim animasyonu */
        }

        .pagination .page-item.active .page-link {
            background-color: #0056b3;
            color: white;
        }

        .pagination .page-link:hover {
            background-color: #004494;
            color: white;
        }

        /* Sayfalama stili için fazladan boşluk */
        .nav {
            padding-top: 2rem;
        }

        /* Dikey çizgileri daha ince ve hafif yap */
        hr.my-3 {
            border-top: 1px solid #eee;
        }
    </style>