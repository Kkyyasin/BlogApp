@model Post

<div class="row mb-4">

    <div class="col-lg-8">
        <div class="bg-white p-3">
            <h4 class="mb-4">@Model.Title</h4>


            <div class="tags">
                @foreach (var tag in @Model.Tags){
                <a href="/posts/tag/@tag.Url"
                    class="badge bg-@tag.Color bg-opacity-10 text-@tag.Color mb-2 fw-bold">@tag.Text</a>
                }
            </div>
            <img src="data:image/png;base64,@Convert.ToBase64String(@Model.Image)" class="img-fluid rounded">
            <div class="content">
                @Model.Content
            </div>
        </div>
        <div class="bg-white mt-3">
            <div class="card border-0">
                <div class="card-header pb-0">
                    <h4>@Model.Comments.Count() adet yorum</h4>
                </div>
                <div class="card-body">
                    @foreach (var comment in Model.Comments){
                    <div class="comment-item my-4 d-flex align-items-start">
                        <img src="data:image/png;base64,@Convert.ToBase64String(@comment.User.Image)" alt=""
                            class="avatar rounded-circle me-3">
                        <div>
                            <h6 class="mb-0">
                                @comment.User.UserName
                            </h6>
                            <span class="text-muted">@comment.PublishedOn.ToString("dd MMM yyyy")</span>
                            <p>@comment.Text</p>
                        </div>
                    </div>
                    }

                </div>

            </div>
            <hr class="my-4">
            <div class="card  comment-form-card border-0">
                <div class="card-header pb-0">
                    <h4>Yorum Ekle</h4>
                </div>
                <div class="card-body">
                    <form id="commentForm">

                        <input type="hidden" name="PostId" value="@Model.PostId">
                        <input type="hidden" name="Url" value="@Model.Url">
                        <div class="mb-3">
                            <label for="UserName" class="form-label">Kullanıcı Adı</label>
                            <input type="text" class="form-control" name="UserName" id="UserName" required>
                        </div>
                        <div class="mb-3">
                            <label for="Text" class="form-label">Yorum</label>
                            <textarea name="Text" id="Text" rows="5" class="form-control" required></textarea>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>


    <div class="col-lg-4">
        <vc:tags-menu></vc:tags-menu>
        <vc:new-posts></vc:new-posts>
    </div>
</div>
<link rel="stylesheet" href="~/css/posts.css">
<style>
    /* Yorum formu kartı için genel stil */
    .comment-form-card {
        background: #fff;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-top: 2rem;
        /* Üstte boşluk ekle */
    }

    /* Kart başlığı */
    .comment-form-card .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #eaeaea;
        padding: 0.75rem 1.25rem;
    }

    /* Kart başlığı başlık */
    .comment-form-card .card-header h4 {
        color: #333;
        font-weight: 600;
        margin-bottom: 0;
        /* Alt boşluğu sıfırla */
    }

    /* Form elemanları için stil */
    .comment-form-card .form-label {
        font-weight: 500;
        color: #555;
    }

    .comment-form-card .form-control {
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        padding: 0.75rem 1rem;
        font-size: 0.9rem;
        color: #495057;
    }

    .comment-form-card .form-control:focus {
        border-color: #80bdff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    /* Buton stil ayarları */
    .comment-form-card .btn-primary {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
        border-radius: 0.25rem;
        transition: all 0.2s ease-in-out;
    }

    .comment-form-card .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }

    .card {
        border-radius: 8px;
    }

    /* Yorumlar kartı genel stilleri */
    .bg-white {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgb(0 0 0 / 10%);
        margin-top: 1rem;
        overflow: hidden;
        /* İçerikleri kartın dışına taşmasını önler */
    }

    /* Yorumlar kartı başlığı */
    .bg-white .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #eaeaea;
        padding: 0.75rem 1.25rem;

    }

    /* Yorumlar başlığı */
    .bg-white .card-header h4 {
        font-size: 1.25rem;
        margin-bottom: 0.25rem;
        /* Alt boşluğu sıfırla */
        color: #333;
        font-weight: 500;
    }

    /* Yorum içeriği */
    .bg-white .card-body .comment-item {
        display: flex;
        align-items: center;
        border-top: 1px solid #eaeaea;
        padding: 1rem 0.75rem;
    }

    /* İlk yorum için üst çizgiyi kaldır */
    .bg-white .card-body .comment-item:first-child {
        border-top: none;
    }

    /* Kullanıcı avatarı */
    .comment-item .avatar {
        flex-shrink: 0;
        /* Boyutunu koru */
        width: 48px;
        height: 48px;
        border-radius: 50%;
        margin-right: 1rem;
        object-fit: cover;
    }

    /* Yorum metni */
    .comment-item p {
        margin: 0;
        font-size: 0.9rem;
        color: #555;
    }

    /* Yorum yapan kullanıcı ve tarih */
    .comment-item h6 {
        font-size: 0.95rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 0.25rem;
    }

    .comment-item span {
        font-size: 0.8rem;
        color: #888;
        display: block;
        /* Kendi satırında gösterilsin */
    }


    /* Genel arka plan ve padding ayarları */
    .bg-white {
        background: #fff;
        padding: 2rem;
        border-radius: 0.25rem;
        box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
        /* Alt kısma boşluk ekle */
    }

    /* Post başlığı */
    .bg-white h4 {
        color: #333;
        font-size: 2.2rem;
        /* Büyük ve okunaklı başlık fontu */
        font-weight: 700;
        /* Başlık için kalın yazı tipi */
        margin-bottom: 1rem;
    }

    /* Etiketler için stil */
    .tags .badge {
        font-size: 0.85rem;
        background-color: rgba(220, 53, 69, 0.1);
        /* Etiket arka planı daha belirgin */
        color: #dc3545;
        /* Etiket metin rengi */
        padding: 0.5rem 1rem;
        /* Etiket padding */
        border-radius: 0.25rem;
        /* Yuvarlak köşeler */
        transition: background-color 0.2s, color 0.2s;
    }

    .tags .badge:hover {
        background-color: #dc3545;
        /* Hover durumunda arka plan rengi */
        color: #fff;
        /* Hover durumunda metin rengi */
    }

    /* Görsel stil ayarları */
    .img-fluid {
        max-width: 100%;
        height: auto;
        border-radius: 0.25rem;
        margin-top: 1rem;
        margin-bottom: 1rem;
    }

    /* İçerik başlığı */
    .bg-white h5 {
        font-size: 1.5rem;
        color: #0056b3;
        margin-top: 2rem;
        margin-bottom: 1rem;
    }

    /* İçerik metni */
    .content {
        font-size: 1rem;
        color: #666;
        line-height: 1.8;
        text-align: justify;
    }

    /* Yan sütun içindeki widget başlıkları */
    .vc-component .card-header {
        background-color: #f8f9fa;
        color: #333;
        font-size: 1.25rem;
        padding: 1rem 1.25rem;
        border-bottom: 1px solid #eaeaea;
    }

    /* Yan sütun içindeki widget gövdesi */
    .vc-component .card-body {
        padding: 1rem 1.25rem;
    }

    /* Linkler */
    .btn-link {
        color: #0056b3;
        text-decoration: none;
    }

    .btn-link:hover {
        text-decoration: underline;
        color: #003975;
    }
</style>